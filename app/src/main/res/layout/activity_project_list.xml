<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="800dp"
    tools:context=".ProjectListActivity">

    <Button
        android:id="@+id/TapTap_Beta"
        android:textSize="18dp"
        android:layout_width="250dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_height="100dp"
        android:textAllCaps="false"
        android:text="TapTap Beta"/>

    <Button
        android:id="@+id/TapTap"
        android:textSize="18dp"
        android:layout_width="250dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_height="100dp"
        android:textAllCaps="false"
        android:text="TapTap"/>


    <Button
        android:id="@+id/TapTap_Pad"
        android:textSize="18dp"
        android:layout_width="250dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_height="100dp"
        android:textAllCaps="false"
        android:text="TapTap Pad"/>

    <Button
        android:id="@+id/TapTap_international"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="TapTap International"
        android:textAllCaps="false"
        android:textSize="18dp" />

    <Button
        android:id="@+id/Logout"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:text="退出"
        android:textStyle="bold" />



</LinearLayout>